<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <menuitem id="test_kw_api_credential_main_menu"
              parent="base.menu_custom"
              name="Test Api connection"/>

    <record id="test_kw_api_credential_tree_view" model="ir.ui.view">
        <field name="name">test.kw.api.credential.list</field>
        <field name="model">test.kw.api.credential</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="api_connector_id"/>
            </list>
        </field>
    </record>

    <record id="test_kw_api_credential_form_view" model="ir.ui.view">
        <field name="name">test.kw.api.credential.form</field>
        <field name="model">test.kw.api.credential</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test1" type="object"
                            string="Make Test1" />

                </header>
                <field name="active" invisible="1"/>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="act_logs_tree"
                                class="oe_stat_button" type="object"
                                icon="fa-code"
                                string="Logs">
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="api_connector_id"/>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_kw_api_credential_search" model="ir.ui.view">
        <field name="name">test.kw.api.credential.search</field>
        <field name="model">test.kw.api.credential</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="api_connector_id"/>
            </search>
        </field>
    </record>

    <record id="test_kw_api_credential_act_window" model="ir.actions.act_window">
        <field name="name">Test Api Credential</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">test.kw.api.credential</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="test_kw_api_credential_menu"
              parent="test_kw_api_credential_main_menu"
              action="test_kw_api_credential_act_window"
              name="Test Api Credential"/>
</odoo>
